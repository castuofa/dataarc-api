{
  "kind": "collectionType",
  "collectionName": "datasets",
  "info": {
    "name": "Dataset"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "citation": {
      "type": "text"
    },
    "url": {
      "type": "string"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": ["images"],
      "plugin": "upload",
      "required": false
    },
    "source": {
      "model": "file",
      "via": "related",
      "allowedTypes": ["files"],
      "plugin": "upload",
      "required": false
    },
    "title_layout": {
      "type": "text"
    },
    "summary_layout": {
      "type": "text"
    },
    "details_layout": {
      "type": "text"
    },
    "link_layout": {
      "type": "text"
    },
    "state": {
      "type": "enumeration",
      "enum": ["pending", "processing", "updating", "failed", "done"],
      "default": "pending"
    },
    "state_msg": {
      "type": "string"
    },
    "state_at": {
      "type": "datetime"
    },
    "category": {
      "via": "datasets",
      "model": "category"
    },
    "combinators": {
      "via": "dataset",
      "autoPopulate": false,
      "collection": "combinator"
    },
    "fields": {
      "collection": "dataset-field",
      "via": "dataset",
      "autoPopulate": false
    },
    "features": {
      "collection": "feature",
      "via": "dataset",
      "autoPopulate": false
    }
  }
}
