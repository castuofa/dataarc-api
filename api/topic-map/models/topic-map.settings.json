      "type": "string",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "citation": {
      "type": "text"
    },
    "url": {
      "type": "string"
    },
    "nodes": {
      "type": "json"
    },
    "edges": {
      "type": "json"
    },
    "source": {
      "model": "file",
      "via": "related",
      "allowedTypes": ["files"],
